<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="320dp"
    android:layout_width="220dp"
    android:layout_margin="4dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/imageview_wantread"
                android:layout_width="match_parent"
                android:layout_height="230dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/gray"
                android:gravity="center"
                android:singleLine="true"
                android:id="@+id/textview_wantread_bookname"
                android:layout_below="@id/imageview_wantread"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:singleLine="true"
                android:id="@+id/textview_wantread_author"
                android:layout_below="@id/textview_wantread_bookname"
                />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>